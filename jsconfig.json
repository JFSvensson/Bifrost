{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "/js/*": ["js/*"],
      "/css/*": ["css/*"],
      "/data/*": ["data/*"]
    }
  },
  "include": [
    "js/**/*",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "js/sw.js"
  ]
}
