{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "/src/*": ["src/*"],
      "/css/*": ["css/*"],
      "/data/*": ["data/*"]
    }
  },
  "include": [
    "src/**/*",
    "*.js",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/sw.js"
  ]
}
