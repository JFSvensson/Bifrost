{
  "name": "bifrost",
  "version": "1.0.0",
  "description": "Modern todo app with Obsidian sync, reminders, and more",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint js/**/*.{js,ts} scripts/**/*.js",
    "lint:fix": "eslint js/**/*.{js,ts} scripts/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,ts,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,html,md}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^20.19.25",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.15.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "keywords": [
    "todo",
    "productivity",
    "pwa",
    "obsidian"
  ],
  "author": "",
  "license": "MIT"
}
