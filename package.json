{
  "name": "bifrost",
  "version": "1.0.0",
  "description": "Modern todo app with Obsidian sync, reminders, and more",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:esbuild": "node esbuild.config.js",
    "build:prod": "node esbuild.config.js --prod",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "dev:esbuild": "node esbuild.config.js --watch",
    "clean": "node -e \"const fs=require('fs');['dist','dist-prod'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true})})\"",
    "clean:prod": "node -e \"const fs=require('fs');if(fs.existsSync('dist-prod'))fs.rmSync('dist-prod',{recursive:true})\"",
    "preview:prod": "npm run build:prod && npx serve dist-prod",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{js,ts} scripts/**/*.js",
    "lint:fix": "eslint src/**/*.{js,ts} scripts/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,ts,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,html,md}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.13",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  },
  "keywords": [
    "todo",
    "productivity",
    "pwa",
    "obsidian"
  ],
  "author": "",
  "license": "MIT"
}
